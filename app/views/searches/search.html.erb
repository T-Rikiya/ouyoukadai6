<table class="table table-hover table-inverse">
  <!--Userを検索した時 -->
  <% if @range == "User" %>
    <h3>Users search for "<%= @word %>"</h3>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
      </tr>
    </thead>  
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--Bookを検索した時 -->
    <h3>Books search for "<%= @word %>"</h3>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size:'50x50' %></td>
          <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>